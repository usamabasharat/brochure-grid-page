<!DOCTYPE html>
<html>
<head>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <title><%= city.name %> - <%= product.name %> Brochure Grid</title>
  <style>
    .card {
      margin-bottom: 20px;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1 class="mt-4">Welcome to <%= city.name %> - <%= product.name %> Brochure Grid</h1>
    <p>Description of <%= city.name %> is <%= city.description %> and of the product is <%= product.description %></p>

    <div class="row row-cols-1 row-cols-md-3">
      <% brochures.forEach((brochure, index) => { %>
        <% if (index < 12) { %>
          <div class="col mb-4">
            <div class="card">
              <h2 class="card-header"><%= brochure.title %></h2>
              <div class="card-body">
                <p class="card-text"><%= brochure.description %></p>
                <a href="<%= brochure.brochureImages.thumbnails %>" class="btn btn-primary">View Brochure</a>
              </div>
            </div>
          </div>
        <% } %>
      <% }); %>
    </div>
  </div>
</body>
</html>

